@model List<ClaimSystem.Models.Lecturer>
@{
    ViewData["Title"] = "HR — Lecturers";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex gap-2 align-items-center">
            <span class="icon-pill"><i class="bi bi-people"></i></span>
            <h1 class="h4 brand-serif mb-0">Lecturers</h1>
        </div>
        <a class="btn btn-mint" asp-action="Create">
            <i class="bi bi-plus-lg me-1"></i>Add
        </a>
    </div>

    @if (TempData["ok"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">
            <i class="bi bi-check2-circle me-2"></i>@ok
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-4">
            <i class="bi bi-inbox fs-1 text-muted d-block mb-2"></i>
            <p class="mb-1 brand-serif h5">No lecturers captured</p>
            <p class="text-muted mb-0">Use the Add button to create lecturer profiles and hourly rates.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Department</th>
                        <th class="text-end">Hourly Rate (R)</th>
                        <th class="text-center">Active</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.OrderBy(l => l.Name))
                    {
                        <tr>
                            <td>@x.Name</td>
                            <td>@x.Email</td>
                            <td>@x.Phone</td>
                            <td>@x.Department</td>
                            <td class="text-end">@x.HourlyRate.ToString("N2")</td>
                            <td class="text-center">
                                @if (x.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-light btn-sm me-1"
                                   asp-action="Edit" asp-route-id="@x.Id">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@x.Id" />
                                    <button class="btn btn-ghost btn-sm" type="submit">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
