@using ClaimSystem.Models
@using Microsoft.AspNetCore.Http
@{
    var role = Context.Session.GetString("UserRole") ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CMCS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Dancing+Script:wght@600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css?v=7" />
</head>
<body>
    <header class="nav-olive">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand brand-serif" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-leaf me-2 text-olive"></i>CMCS
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#cmcsNav"
                        aria-controls="cmcsNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="cmcsNav">
                    <ul class="navbar-nav ms-auto">


                        @if (string.Equals(role, RoleNames.Lecturer, StringComparison.OrdinalIgnoreCase))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="Submit">
                                    <i class="bi bi-file-earmark-plus me-1 text-olive"></i> Lecturer: Submit
                                </a>
                            </li>
                        }


                        @if (string.Equals(role, RoleNames.Coordinator, StringComparison.OrdinalIgnoreCase))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="Review">
                                    <i class="bi bi-clipboard-check me-1 text-sage"></i> Coordinator: Review
                                </a>
                            </li>
                        }

                   
                        @if (string.Equals(role, RoleNames.Manager, StringComparison.OrdinalIgnoreCase))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="ManagerReview">
                                    <i class="bi bi-clipboard2-check me-1 text-sage"></i> Manager: Review
                                </a>
                            </li>
                        }

       
                        @if (string.Equals(role, RoleNames.HR, StringComparison.OrdinalIgnoreCase))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="hrDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-people me-1 text-sage"></i> HR
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="hrDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="HR" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i>Dashboard &amp; Monthly Summary
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li class="dropdown-header">Lecturers</li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="HRLecturers" asp-action="Index">
                                            <i class="bi bi-person-lines-fill me-2"></i>Manage Lecturers
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="HRLecturers" asp-action="Create">
                                            <i class="bi bi-person-plus me-2"></i>Add Lecturer
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }


                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claims" asp-action="StatusList">
                                <i class="bi bi-search me-1 text-deep"></i> Track Claim
                            </a>
                        </li>

                     
                        <li class="nav-item ms-lg-3">
                            @if (string.IsNullOrWhiteSpace(role))
                            {
                                <a class="btn btn-light btn-sm" asp-controller="Home" asp-action="SelectRole">
                                    <i class="bi bi-person-badge me-1"></i> Choose role
                                </a>
                            }
                            else
                            {
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-person-badge me-1"></i>@role
                                    </span>
                                    <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-ghost btn-sm">
                                            <i class="bi bi-box-arrow-right me-1"></i>Sign out
                                        </button>
                                    </form>
                                </div>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="py-4 mt-5 border-top text-secondary">
        <div class="container small">© @DateTime.Now.Year — CMCS</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
